{
  "manifest_version": 2,
  "name": "VerzaukeksBrowserControl",
  "author": "Verzaukeks",
  "version": "1.1.2",
  "description": "Control your browser within your code and get access to many useful features as if it were an add-on.",
  "icons": {
    "128": "icon.svg"
  },

  "permissions": [
    "storage",
    "cookies",
    "tabs",
    "*://*/*"
  ],

  "background": {
    "scripts": ["scripts/debug.js", "scripts/config.js", "scripts/handler.js", "scripts/connector.js", "scripts/processor.js"]
  },

  "browser_action": {
    "default_title": "VerzaukeksBrowserControl",
    "default_popup": "popup/index.html",
    "default_icon": {
      "128": "icon.svg"
    }
  }
}